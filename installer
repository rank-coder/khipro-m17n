#!/bin/bash

# KhiproKeyboard Installer Script
# This script installs KhiproKeyboard for either IBus or Fcitx5

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if running with sudo
if [ "$EUID" -ne 0 ]; then
    print_error "This script requires sudo privileges. Please run with sudo."
    exit 1
fi

# Welcome message
echo "=========================================="
echo "    KhiproKeyboard Installer"
echo "=========================================="
echo ""

# Branch selection
print_status "Checking installation branch..."
read -p "Install stable release from the main branch? (Y/n): " branch_choice

branch_choice=${branch_choice:-Y}  # Default to Y if empty

if [[ $branch_choice =~ ^[Nn]$ ]]; then
    print_status "Available branches: main, beta, dev (or any custom branch)"
    read -p "Enter the branch name you want to install: " branch_name
    if [ -z "$branch_name" ]; then
        print_warning "No branch specified. Using 'main' branch."
        branch_name="main"
    else
        print_status "Will install from branch: $branch_name"
    fi
else
    branch_name="main"
    print_status "Using stable release (main branch)"
fi

# Input method selection
print_status "Select your input method framework:"
echo "1) IBus"
echo "2) Fcitx5"
read -p "Enter your choice (1 or 2): " im_choice

case $im_choice in
    1)
        im_framework="ibus"
        print_status "Selected: IBus"
        ;;
    2)
        im_framework="fcitx5"
        print_status "Selected: Fcitx5"
        ;;
    *)
        print_error "Invalid choice. Please run the script again and select 1 or 2."
        exit 1
        ;;
esac

# Installation process begins
print_status "Starting KhiproKeyboard installation..."

# Remove existing files
print_status "Cleaning up previous installations..."
sudo rm -f /usr/share/m17n/bn-khipro*.mim
sudo rm -rf ~/khipro-m17n

# Clone repository
print_status "Downloading KhiproKeyboard from GitHub..."
if [ "$branch_name" = "main" ]; then
    git clone https://github.com/rank-coder/khipro-m17n.git ~/khipro-m17n
else
    git clone --branch "$branch_name" https://github.com/rank-coder/khipro-m17n.git ~/khipro-m17n
fi

# Check if clone was successful
if [ ! -d ~/khipro-m17n ]; then
    print_error "Failed to clone repository. Please check your internet connection and branch name."
    exit 1
fi

print_success "Repository cloned successfully!"

# Copy files
print_status "Installing keyboard files..."
cd ~/khipro-m17n

# Check if the required files exist
if [ ! -f bn-khipro.mim ]; then
    print_error "Required file bn-khipro.mim not found in the repository!"
    exit 1
fi

sudo cp bn-khipro*.mim /usr/share/m17n/

# Copy icon if it exists
if [ -f bn-khipro.png ]; then
    print_status "Installing icon..."
    sudo mkdir -p /usr/share/m17n/icons/
    sudo cp bn-khipro.png /usr/share/m17n/icons/
    print_success "Icon installed!"
else
    print_warning "Icon file not found, skipping icon installation."
fi

print_success "Keyboard files installed successfully!"

# Restart input method framework
print_status "Restarting input method framework..."
case $im_framework in
    "ibus")
        if command -v ibus >/dev/null 2>&1; then
            ibus restart
            print_success "IBus restarted successfully!"
        else
            print_error "IBus command not found. Please make sure IBus is installed."
        fi
        ;;
    "fcitx5")
        if command -v fcitx5 >/dev/null 2>&1; then
            fcitx5 restart
            print_success "Fcitx5 restarted successfully!"
        else
            print_error "Fcitx5 command not found. Please make sure Fcitx5 is installed."
        fi
        ;;
esac

# Final instructions
echo ""
print_success "KhiproKeyboard installation completed!"
echo ""
print_status "Next steps:"
echo "1. Add KhiproKeyboard to your input method:"
if [ "$im_framework" = "ibus" ]; then
    echo "   - Open IBus Preferences"
    echo "   - Add input method: Bengali -> Khipro"
else
    echo "   - Open Fcitx5 Configuration"
    echo "   - Add Khipro keyboard"
fi
echo "2. Switch to KhiproKeyboard using your input method switcher"
echo ""
print_status "If you encounter any issues, please visit:"
echo "https://github.com/rank-coder/khipro-m17n"
echo ""
